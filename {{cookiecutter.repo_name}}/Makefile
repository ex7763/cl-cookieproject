.PHONY: docs
LISP ?= ros run

all: test

run:
	rlwrap $(LISP) --load run.lisp

build:
	$(LISP)	--non-interactive \
		--load {{ cookiecutter.project_name}}.asd \
		--eval '(ql:quickload :{{ cookiecutter.project_name}})' \
		--eval '(asdf:make :{{ cookiecutter.project_name}})'

test:
	$(LISP) --non-interactive \
		--load run-tests.lisp

docs:
	docsify serve docs
